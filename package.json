{
  "name": "wolfc-utils",
  "displayName": "Wolf-C",
  "description": "Syntax highlighting, autocompletion, formatting, and linting for Wolf-C language",
  "version": "0.0.1",
  "publisher": "your-name",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:wolf-c"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "wolf-c",
        "aliases": [
          "Wolf-C",
          "wolf-c"
        ],
        "extensions": [
          ".w"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "wolf-c",
        "scopeName": "source.wolf-c",
        "path": "./syntaxes/wolf-c.tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "build": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^14.14.37",
    "@types/vscode": "^1.60.0",
    "typescript": "^4.4.3",
    "vscode": "^1.1.37", 
    "vsce": "^1.98.0" 
  }
}